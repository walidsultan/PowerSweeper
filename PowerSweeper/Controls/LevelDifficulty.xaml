<controls:ChildWindow x:Class="PowerSweeper.Controls.LevelDifficulty"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="447" Height="147" 
           Title="Choose Level Difficulty">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*" />
            <RowDefinition  Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" Grid.Row="1" >
            <Button x:Name="btnEasy" Click="btnEasy_Click" Content="Easy" Width="70" Height="40"/>
            <Button x:Name="btnMedium" Click="btnMedium_Click"  Content="Medium" Width="70" Height="40" Margin="10"/>
            <Button x:Name="btnHard" Click="btnHard_Click"  Content="Hard" Width="70" Height="40"/>
        </StackPanel>
  </Grid>
</controls:ChildWindow>